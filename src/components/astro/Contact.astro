---
import ContactForm from '../vue/ContactForm.vue';

const contactInfo = [
  {
    icon: 'email',
    label: 'Email',
    value: 'pelaezjerard@gmail.com',
    href: 'mailto:pelaezjerard@gmail.com'
  },
  {
    icon: 'location',
    label: 'Location',
    value: 'Las Pinas, Philippines',
    href: null
  },
  {
    icon: 'availability',
    label: 'Availability',
    value: 'Open to opportunities',
    href: null
  }
];
---

<section id="contact" class="py-20 md:py-32 bg-[#0a0a0a] relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16 reveal">
      <span class="inline-block text-blue-400 font-semibold mb-4">Get In Touch</span>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-6">
        Let's Work Together
      </h2>
      <p class="text-lg text-neutral-400 max-w-2xl mx-auto">
        Have a project in mind or want to discuss potential opportunities?
        I'd love to hear from you. Let's create something amazing together.
      </p>
    </div>

    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16">
      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-8">
        {contactInfo.map((info) => (
          <div class="flex items-start gap-4 reveal">
            <div class="w-12 h-12 bg-blue-500/20 rounded-xl flex items-center justify-center flex-shrink-0 border border-blue-500/30">
              {info.icon === 'email' && (
                <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              )}
              {info.icon === 'location' && (
                <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {info.icon === 'availability' && (
                <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              )}
            </div>
            <div>
              <p class="text-sm text-neutral-500 mb-1">{info.label}</p>
              {info.href ? (
                <a href={info.href} class="text-lg font-medium text-white hover:text-blue-400 transition-colors">
                  {info.value}
                </a>
              ) : (
                <p class="text-lg font-medium text-white">{info.value}</p>
              )}
            </div>
          </div>
        ))}

        <!-- Social Links -->
        <div class="pt-8 border-t border-white/10 reveal">
          <p class="text-sm text-neutral-500 mb-4">Connect with me</p>
          <div class="flex gap-4">
            <a
              href="https://github.com/jerardpelaez"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 glass rounded-lg flex items-center justify-center text-neutral-400 hover:text-blue-400 hover:glow-subtle-blue transition-all duration-150"
              aria-label="GitHub"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
            <a
              href="https://www.linkedin.com/in/jerard-pelaez-770a46198/"
              target="_blank"
              rel="noopener noreferrer"
              class="w-12 h-12 glass rounded-lg flex items-center justify-center text-neutral-400 hover:text-blue-400 hover:glow-subtle-blue transition-all duration-150"
              aria-label="LinkedIn"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3 reveal">
        <div class="glass rounded-2xl p-8 glow-subtle-blue">
          <ContactForm client:visible />
        </div>
      </div>
    </div>
  </div>
</section>
