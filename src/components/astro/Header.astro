---
import MobileNav from '../vue/MobileNav.vue';

const navItems = [
  { label: 'Home', href: '#hero' },
  { label: 'About', href: '#about' },
  { label: 'Skills', href: '#skills' },
  { label: 'Projects', href: '#projects' },
  { label: 'Contact', href: '#contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 glass-strong gradient-border">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a
        href="/"
        data-magnetic
        class="text-xl font-bold text-white hover:text-blue-400 transition-colors"
      >
        JP<span class="text-blue-400">.</span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-neutral-400 hover:text-blue-400 font-medium transition-colors relative group"
            >
              {item.label}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-500 to-purple-500 group-hover:w-full transition-all duration-300"></span>
            </a>
          </li>
        ))}
      </ul>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <!-- CTA Button (Desktop) -->
        <a
          href="#contact"
          data-magnetic
          class="hidden md:inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-lg transition-all duration-300 glow-subtle-blue hover:glow-blue"
        >
          Get in Touch
        </a>

        <!-- Mobile Navigation -->
        <div class="md:hidden">
          <MobileNav client:media="(max-width: 768px)" navItems={navItems} />
        </div>
      </div>
    </div>
  </nav>
</header>
