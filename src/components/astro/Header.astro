---
import MobileNav from '../vue/MobileNav.vue';
import { navItems } from '../../data/navigation';
---

<header class="fixed top-0 left-0 right-0 z-50 glass-strong gradient-border">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a
        href={import.meta.env.BASE_URL}
        class="text-xl font-bold text-dark-text hover:text-primary transition-colors"
      >
        JP<span class="text-primary">.</span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-dark-muted hover:text-primary-light font-medium transition-colors relative group"
            >
              {item.label}
              <span class="nav-underline absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-primary to-primary-light group-hover:w-full transition-all duration-300"></span>
            </a>
          </li>
        ))}
      </ul>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <!-- CTA Button (Desktop) -->
        <a
          href="#contact"
          class="hidden md:inline-flex items-center justify-center px-5 py-2.5 bg-primary-dark hover:bg-primary text-white font-medium rounded-lg transition-all duration-300 glow-subtle-purple hover:glow-purple"
        >
          Get in Touch
        </a>

        <!-- Mobile Navigation -->
        <div class="md:hidden">
          <MobileNav client:media="(max-width: 768px)" navItems={navItems} />
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sections = Array.from(document.querySelectorAll<HTMLElement>('section[id]'));
    const navLinks = document.querySelectorAll('nav a[href^="#"]');
    const HEADER_OFFSET = 100;
    let activeId: string | null = null;

    const setActiveLink = (id: string | null) => {
      if (id === activeId) return;
      activeId = id;
      navLinks.forEach((link) => {
        const href = link.getAttribute('href');
        const isActive = id !== null && href === `#${id}`;
        link.classList.toggle('text-primary', isActive);
        const underline = link.querySelector('.nav-underline');
        if (underline) underline.classList.toggle('w-full', isActive);
      });
    };

    const onScroll = () => {
      const scrollY = window.scrollY + HEADER_OFFSET;
      let current: string | null = null;

      for (const section of sections) {
        if (section.offsetTop <= scrollY) {
          current = section.id;
        }
      }

      setActiveLink(current);
    };

    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  });
</script>
