    codeUrl: null,
    featured: true
  },
  {
    id: '3',
    title: 'E-Commerce Product Catalog',
    description: 'B2B chemical product catalog with advanced search, filtering, technical specifications, and seamless quote request workflows.',
    image: productCatalogImage.src,
    tags: ['Nuxt.js', 'Vuetify', 'TypeScript'],
    demoUrl: 'https://www.caplinq.com/',
    codeUrl: null,
    featured: false
  },
  {
    id: '4',
    title: 'Live Gaming Platform',
    description: 'Real-time multiplayer gaming application with smooth UX, live updates via WebSocket, and engaging interactive features.',
    image: liveGamingImage.src,
    tags: ['Vue.js', 'TypeScript', 'WebSocket'],
    demoUrl: 'https://www.og6666.com/',
    codeUrl: null,
    featured: false
  },
  {
    id: '5',
