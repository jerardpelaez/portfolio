const projects = [
  {
    id: '1',
    title: 'GitTap',
    description: 'Job recruitment platform connecting IT and engineering professionals with opportunities in Japan. Features advanced job search, filtering, and a polished responsive interface.',
    image: gittapImage.src,
    tags: ['Vue.js', 'Vuetify', 'TypeScript'],
    demoUrl: 'https://www.gittap.jp/',
    codeUrl: null,
    featured: true
  },
  {
    id: '2',
    title: 'Enterprise Document Platform',
